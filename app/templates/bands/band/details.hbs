<section class="rr-panel b--solid br1 bw1">
  <button
    type="button"
    class="rr-action-button fr"
    onclick={{action (if isEditing "save" "edit")}}
  >
    {{if isEditing "Save" "Edit"}}
  </button>
  <h3>Description</h3>
  {{#if isEditing}}
    {{#if showErrors.description}}
      <div class="rr-form-field-error" data-test-rr="description-error">
        {{v-get
          model
          "description"
          "message"
        }}
      </div>
    {{/if}}
    {{textarea class="rr-textarea" value=model.description}}
  {{else}}
    <p class="lh-copy">{{model.description}}</p>
  {{/if}}
</section>